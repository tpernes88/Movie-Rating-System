@model MovieRatingSystem.ViewModels.Requests.MovieDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="row rowtitle">
    <div class="col-sm-10 movieTitle">
        <h1>@Model.Movie.Name</h1>
    </div>
    <div class="col-sm-2 backToList">
        <input type="button" class="btn btn-secondary" value="Back to Dashboard" onclick="window.location='@Url.Action("Index", "Movies")'" />
    </div>
</div>
<hr class="hrtitle" />
<div class="row">
    <div class="col-sm-3">
        <img src="~/images/@Model.Movie.ImgCode" align="middle" alt="ASP.NET" class="img-responsive" />
    </div>
    <div class="col-sm-5">
        
    </div>
    <div class="col-sm-4">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Movie.Name):
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Movie.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Movie.Year):
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Movie.Year)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Movie.Director):
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Movie.Director.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Movie.MoviesActors):
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ActorsString)
            </dd>
        </dl>
        <div class="btn-group-vertical">
            <input type="button" class="btn btn-outline-dark" value="Edit Movie" onclick="window.location='@Url.Action("Edit", "Movies", new {id=Model.Movie.Id })'" />
            <input type="button" class="btn btn-outline-dark" value="Delete Movie" onclick="window.location='@Url.Action("Delete", "Movies",  new {id=Model.Movie.Id })'" />
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        @Html.DisplayFor(model => model.Movie.Description)
    </div>
</div>

